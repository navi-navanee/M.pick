<div class="form-box mt-5">
  <div class="form-tab">
    <h2 class="text-centre">change-password</h2>
    <div class="tab-content" id="tab-content-5">
      <div class="tab-pane fade show active" id="signin" role="tabpanel" aria-labelledby="signin-tab">
        <form id="userChangePass" action="/submit-password" method="post">
          {{#if passerror}}
          <p style="color: red;" class="error"> New password dosenot match</p>
          {{/if}}
          {{#if cuurenterror}}
          <p style="color: red;"> Current password is Wrong</p>
          {{/if}}

          <div class="form-group">
            <label>Current Password</label>
            <input type="text" class="form-control" name="password" placeholder="Enter current Password" id="Email">
            <span id="errorEmail" style="color:red;"></span>
          </div>

          <div class="form-group">
            <label>New Password</label>
            <input type="text" class="form-control" name="password1" placeholder="Enter new password" id="Email">
            <span id="errorEmail" style="color:red;"></span>
          </div>

          <div class="form-group">
            <label>Re-enter Password</label>
            <input type="text" class="form-control" name="password2" placeholder="Re enter your Password" id="Email">
            <span id="errorEmail" style="color:red;"></span>
          </div>
          <button type="submit" class="btn btn-primary float-right">Submit</button>
          {{! <a href="/adminlogin" class="btn btn-primary">Admin login</a> }}

        </form>

      </div><!-- End .form-footer -->

    </div><!-- .End .tab-pane -->
  </div><!-- End .tab-content -->
</div><!-- End .form-tab -->