<div class="form-box mt-5">
  <div class="form-tab">
    <h2 class="text-centre">Login</h2>
    <div class="tab-content" id="tab-content-5">
      <div
        class="tab-pane fade show active"
        id="signin"
        role="tabpanel"
        aria-labelledby="signin-tab"
      >
        <form id="Form" action="/login" method="post">
       

         <div class="form-group">
                    <label>Email address</label>
                    <input type="email" class="form-control" name="Email" placeholder="Enter email"  id="Email">
                    <span id="errorEmail" style="color:red;"></span>
                </div>
          <div class="form-group">
            <label>Password</label>
            <input
              type="password"
              class="form-control"
              name="Password"
              placeholder="Password"
              id="Password"
            />
            <span id="errorPassword" style="color:red;"></span>

            {{#if blkerr}}
            <p class="error mt-3 " style="color: red;">blocked by admin</p>
            {{/if}}
             {{#if loginErr}}
              <p class="error mt-3 " style="color: red;">Invalid username or password</p>
            {{/if}}

          </div>
          <a href="/signup">Create new account ?</a>
          <div>

                <a href="/otp">login with otp</a>
          </div>
          <button
            type="submit"
            class="btn btn-primary float-right"
          >Login</button>
          {{! <a href="/adminlogin" class="btn btn-primary">Admin login</a> }}

        </form>

      </div><!-- End .form-footer -->

    </div><!-- .End .tab-pane -->
  </div><!-- End .tab-content -->
</div><!-- End .form-tab -->

<script>
      
        const email=document.getElementById("Email");
        const password=document.getElementById("Password");
        const form=document.getElementById("Form");
        const error1=document.getElementById("errorEmail");
        const error2=document.getElementById("errorPassword")
 
        form.addEventListener('submit',(e)=>{
          let message1=[]
          let message2=[]
      
          if(email.value===''||email.value==null){
            message1.push('Please enter your Email')
        }
        
          if(password.value===''||password.value==null){
            message2.push('Please enter the password')
          }
           else if(password.value.length<3){
            message2.push('password must be atleast 4 character')
          }
          if(message1.length>0){
           e.preventDefault();
           error1.innerText=message1.join('  ')
          }
          if(message2.length>0){
            e.preventDefault()
            error2.innerText=message2.join('  ')
          }
         
         
        })
       
      </script>
