

        <main class="main">
        	<div class="page-header text-center" style="background-image: url('assets/images/page-header-bg.jpg')">
        		<div class="container">
        			<h1 class="page-title">Wishlist<span>Shop</span></h1>
        		</div><!-- End .container -->
        	</div><!-- End .page-header -->
            <div class="page-content">
            	<div class="container">
					<table class="table table-wishlist table-mobile">
						<thead>
							<tr>
								<th>Product</th>
								<th>Price</th>
								<th></th>
								<th></th>
							</tr>
						</thead>

						<tbody>
                            {{#each product}}
							<tr>
								<td class="product-col">
									<div class="product">
										<figure class="product-media">
											<a href="#">
												<img src="/product-images/{{this.product._id}}.jpg" alt="Product image">
											</a>
										</figure>

										<h3 class="product-title">
											<a href="">{{this.product.Name}}</a>
										</h3><!-- End .product-title -->
									</div><!-- End .product -->
								</td>
								<td class="price-col">{{this.product.Price}}</td>
							
								<td class="action-col">
									<button onclick="addToCart('{{this.product._id}}')" class="btn btn-block btn-outline-primary-2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <i class="icon-list-alt"></i>Add to Cart
                                    </button>

										</a>
                            
								</td>
								<td class="remove-col"><button onclick="removeWishlist('{{this._id}}','{{this.product._id}}')" class="btn-remove"><i class="icon-close"></i></button></td>
							</tr>
						{{/each}}
						</tbody>
					</table><!-- End .table table-wishlist -->
