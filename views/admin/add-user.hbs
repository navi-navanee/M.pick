
               <div class="form-box mt-5">
                        <div class="form-tab">
                                      <h2 class="text-centre">Create an account</h2>
                            <div class="tab-content" id="tab-content-5">
                                
         <form id="Form" action="/admin/adminadduser" method="post"> 
                <div class="form-group">
                    <label>Name</label>
                    <input type="text" class="form-control" name="Name" placeholder="Enter name" id="Name">
                       <span id="errorName" style="color:red;"></span>
                </div>
                 <div class="form-group">
                    <label>Email</label>
                    <input type="email" class="form-control" name="Email" placeholder="Enter email" id="Email">
                    <span id="errorEmail" style="color:red;"></span>
                </div>
                  <div class="form-group">
                    <label>Phonenumber</label>
                    <input type="tel" class="form-control" name="Phonenumber" placeholder="Enter Phone Number" id="Phonenumber">
                       <span id="errorPhonenumber" style="color:red;"></span>
                </div>
                 <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" name="Password" placeholder="Enter Password" id="Password">
                       <span id="errorPassword" style="color:red;"></span>
                </div>               
                    <button type="submit" class="btn btn-primary float-rignt">Signup</button>
                
            </form>
                            
                                </div><!-- .End .tab-pane -->
                            </div><!-- End .tab-content -->
                        </div><!-- End .form-tab -->
<script>
      
        const email=document.getElementById("Email");
     const phonenumber=document.getElementById("Phonenumber");
        const password=document.getElementById("Password");
        const form=document.getElementById("Form");
        const Name=document.getElementById("Name");
        const error1=document.getElementById("errorEmail");
        const error2=document.getElementById("errorPassword")
        const error3=document.getElementById("errorName")
         const error4=document.getElementById("errorPhonenumber")
 
        form.addEventListener('submit',(e)=>{
          let message1=[]
          let message2=[]
          let message3=[]
          let message4=[]
      
          if(email.value===''||email.value==null){
            message1.push('Please enter ther username')
        }
        if(phonenumber.value===''||phonenumber.value==null){
            message4.push('Please enter the Phonenumber')
        }else if(isNaN(phonenumber.value)==true){
               message4.push('only number are allowed')
          }else if(phonenumber.value.length!=10){
            message4.push('phonenumber must be 10 digit')
          }
        
          if(password.value===''||password.value==null){
            message2.push('Please enter the password')
          }
           else if(password.value.length<5){
            message2.push('password must be atleast 5 char')
          }
          if(Name.value==''||Name.value==null){
            message3.push('Please enter the Name')
          }else if(isNaN(Name.value)==false){
            message3.push('Enter characters only')
          }
            
          if(message1.length>0){
           e.preventDefault();
           error1.innerText=message1.join('  ')
          }
        if(message4.length>0){
           e.preventDefault();
           error4.innerText=message4.join('  ')
          }
          if(message2.length>0){
            e.preventDefault()
            error2.innerText=message2.join('  ')
          }
          if(message3.length>0){
            e.preventDefault()
            error3.innerText=message3.join('')
          }
         
         
        })
       
      </script>
                        
                