<section>
    <div class="container">
        <div class="container">
            <div class="row mb-3 ">
                <a class="btn btn-dark add-product-bttn" href="/admin/banner-add">Add Banner</a>
            </div>
        </div>
        <table class="table caption-top">
            <caption></caption>
            <thead>
                <tr>
                    <th scope="col">SL No</th>
                    <th scope="col">Banner Name</th>
                     <th scope="col">Link</th>
                      <th scope="col">Banner</th>
                    <th scope="col">Options</th>
                </tr>
            </thead>
            <tbody>
                {{#each banner}}
                <tr>
                    <td scope="row">{{inc @index }}</td>
                    <td>{{this.Name}}</td>
                    <td>{{this.link}}</td>
                    <td><img src="/banner-images/{{this._id}}.jpg" style="width: 100px; height:50px" alt=""></td>
                    <td style="height: 20px; width: 20px;">
                        <a href="/admin/banner-delete?id={{this._id}}" class="btn btn-primary">Delete</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>